<P0>:
    GridLayout:
        cols: 1
        Label:
            text: "The server addres is not correct or the server is offline."
        Label:
            text: "Tap anywhere to close"

WindowManager:
    StartWindow:
    MainWindow:
    HostYourOwn:

<StartWindow>:
    name: "StartWindow"
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2
            Label:
                text: "Username:"
            TextInput:
                id: username
                multiline: False
            Label:
                text: "Game ip:"
            TextInput:
                id: ip
                multiline: False
            Label:
                text: "Game port:"
            TextInput:
                id: port
                multiline: False
        Button:
            text: "Next"
            on_release:
                app.root.current = "MainWindow" if root.next(ip.text, port.text, username.text)  else app.root.current
                root.manager.transition.direction = "left"
        Button:
            text: "Or host your own"
            on_release:
                app.root.current = "HostYourOwn"
                root.manager.transition.direction = "up"

<HostYourOwn>:
    Button:
        text: "Go back"
        on_release:
            app.root.current = "StartWindow"
            root.manager.transition.direction = "down"

<MainWindow>:
    name: "MainWindow"
    GridLayout:
        cols: 1
        size: root.width, root.height
        Button:
            text: "Go back"
            on_release:
                root.disconnect()
                app.root.current = "StartWindow"
                root.manager.transition.direction = "right"