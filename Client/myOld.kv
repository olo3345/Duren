<MyLayout>
    txt: txt
    msg: msg
    ip: ip
    port: port
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2
            Label:
                id: txt
                text: "ip:"
            TextInput:
                id: ip
                multiline: False
            Label:
                text: "port:"
            TextInput:
                id: port
                multiline: False
        Button:
            text: "connect"
            on_press: root.connect_btn()
        GridLayout:
            cols: 2
            Label:
                text: "Message:"
            TextInput:
                id: msg
                multiline: False
        Button:
            text: "Send"
            on_press: root.send_btn()
        Image:
            source: root.pl
            size: self.texture_size